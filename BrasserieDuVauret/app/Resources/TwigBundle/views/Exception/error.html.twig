{% block stylesheets %}
    {{ parent() }}
    <link rel="stylesheet" href="{{ asset('CSS/errorpage.css') }}" type="text/css" />

{% endblock %}

{% block body %}
    {% block header %}
        {{ parent() }}
    {% endblock %}


        {% block content %}
        <h1 class="error404">Oops! An Error Occurred</h1class>
