{% extends 'BrasserieBundle::layout.html.twig' %}

{% block head %}
    {{ parent() }}
    <link rel="stylesheet" href="{{ asset('css/bieres.css') }}" type="text/css" />

{% endblock %}


{% block body %}
    {% block header %}
        {{ parent() }}
    {% endblock %}

    {% block content %}

        <div class="container-fluid row bierebloc">

        <h1 class="slogan2">"Les bières sont non filtrées,</br>non pasteurisées et refermentées en bouteille"</h1>
        </div>

        <!-- Liste des bières -->
        <div class="row">
            {% for biere in bieres %}
                <div class="col-lg-4 col-md-4 col-sm-6 col-xs-12">
                    <a href="#" class="thumbnail">
                        <img src="{{ asset('images/' ~ biere.image) }}" alt="" />
                        <h2> {{ biere.nom }} </h2>
                        <p> {{ biere.contenu }} </p>
                    </a>
                </div>
            {% endfor %}
        </div>

    {% endblock %}


    {% block footer %}
        {{ parent() }}
    {% endblock %}

{% endblock %}