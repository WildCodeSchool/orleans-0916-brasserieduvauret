{% extends 'BrasserieBundle::layout.html.twig' %}

{% block stylesheets %}
    {{ parent() }}
<link rel="stylesheet" href="{{ asset('CSS/bieres.css') }}" type="text/css" />

{% endblock %}


{% block body %}
    {% block header %}
        {{ parent() }}
    {% endblock %}

    {% block content %}

<!-- Liste des biÃ¨res -->
        <div class="row">
            {% for biere in bieres %}
                <div class="col-lg-4 col-md-4 col-sm-6 col-xs-12">
                    <a href="#" class="thumbnail">
                        <img src="{{ asset('upload/' ~ biere.image) }}" alt="" />

                        <h1 class="h1bieres"> {{ biere.nom }} </h1>
                        <p> {{ biere.contenu }} </p>
                    </a>
                </div>

            {% endfor %}
        </div>

    {% endblock %}

    {% block footer %}
        {{ parent() }}
    {% endblock %}


{% endblock %}