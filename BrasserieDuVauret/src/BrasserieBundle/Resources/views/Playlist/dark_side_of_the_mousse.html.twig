{% extends 'BrasserieBundle::layout.html.twig' %}


{% block body %}
    {% block stylesheets %}
        {{ parent() }}
    {% endblock %}
    {% block header %}
        {{ parent() }}
    {% endblock %}

    {% block content %}
        <div class="container-fluid">
            <div class="row marge">
                <div class="col-lg-4">
                    <iframe scrolling="no" frameborder="0" allowTransparency="true" src="http://www.deezer.com/plugins/player?format=square&autoplay=true&playlist=false&width=300&height=300&color=007FEB&layout=dark&size=medium&type=playlist&id=2336105902&app_id=1" width="300" height="300"></iframe>
                </div>
                <div class="col-lg-4">
                    <img class="img-responsive playimg" src="{{ asset ('images/darkside.JPG')}}" alt="bière bio Brasserie du Vauret">
                </div>
                <div class="col-lg-4">
                    <h1 class="playtitle">La Dark side of the Mousse</h1>
                    <p class="textplay">Cette bière s’inspire du style « Belgian dark strong ale » une brune d’inspiration trappiste. Non disponible – En R&D ! Alc : 8° - Amertume :- </p>
                </div>
            </div>
        </div>


    {% endblock %}

    {% block footer %}
        {{ parent() }}
    {% endblock %}

{% endblock %}